root = true

[*]
end_of_line = lf

[{*js,*json,*css,*jsx}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 150

[{*html}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = off

[{package.json,package-lock.json,yarn.lock}]
max_line_length = off
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

[Notification.jsx]
max_line_length = off

[transactionHistory.spec.js]
indent_size = off